    <!-- Categories Section Begin -->
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel">
                    {{#each categories}}
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="{{this.img}}">
                            <h5><a href="/shop-grid?department={{this.name}}">{{this.name}}</a></h5>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->

    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Featured Product</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">All</li>
                            {{#each departments}}
                            <li data-filter=".{{this.slug}}">{{this.name}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                {{#each featuredProducts}}
                <div class="col-lg-3 col-md-4 col-sm-6 mix {{this.slug}}">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="{{this.img}}">
                            {{renderPercentSale this.percentSale}}
                            <ul class="featured__item__pic__hover">
                                <li><a href="/shop-grid/{{this.id}}"><i class="fa fa-retweet"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/shop-grid/{{this.id}}">{{this.name}}</a></h6>
                            <h5 id="price-item-{{this.id}}"><span>$</span>{{renderPrice this}} <span class="span__productSale">{{renderCost this}}</span> </h5>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <!-- Featured Section End -->

    <!-- Banner Begin -->
    <div class="banner" style="margin-bottom: 10px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="/img/banner/banner-1.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="/img/banner/banner-2.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner End -->
