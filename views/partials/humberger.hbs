    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="/"><img src="/img/logo.png" alt=""></a>
        </div>
        {{#if user}}
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="/shoping-cart/love-item"><i class="fa fa-heart"></i> <span id="love-item-number-mobile">{{loveItem}}</span></a></li>
                <li><a href="/shoping-cart"><i class="fa fa-shopping-bag"></i> <span id="cart-item-number-mobile">{{cartItem}}</span></a></li>
            </ul>
            <div class="header__cart__price">item: <span style="font-weight:700">$</span><span id="cart-item-price-mobile">{{totalPrice}}</span></div>
        </div>
        {{else}}
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="/shoping-cart/love-item"><i class="fa fa-heart"></i></a></li>
                <li><a href="/shoping-cart"><i class="fa fa-shopping-bag"></i> </a></li>
            </ul>
            <div class="header__cart__price">item: <span>$0.00</span></div>
        </div>
        {{/if}} 
        <div class="humberger__menu__widget">
            <div class="header__top__right__language">
                <i class="fa fa-user"></i>
                {{#if user}}
                <div>{{user.fullName}}</div>
                <span class="arrow_carrot-down"></span>
                <ul>
                    <li><a href="/user">Account</a>
                    <li><a href="#">Order list</a></li>
                    <li><a href="/auth/logout">Logout</a></li>
                </ul>
                {{else}}
                <div><a class="link_login" href="/auth/login">Login</a></div>
                {{/if}}
            </div>
