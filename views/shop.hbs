
<!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Organi Shop</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Department</h4>
                            <ul>
                                {{#each departments}}
                                <li><a href="/shop-grid?department={{this.name}}">{{this.name}}</a></li>
                                {{/each}}
                                <li><a href="/shop-grid">All</a></li>
                            </ul>
                        </div>
                        <div class="sidebar__item">
                            <h4>Price</h4>
                            <div class="price-range-wrap">
                                <input type="hidden" id="price-min" value={{minPrice}}>
                                <input type="hidden" id="price-max" value={{maxPrice}}>
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                    data-min="1" data-max="100">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <form method="GET" id="price-search">
                                    <div class="range-slider">
                                        <div class="price-input">
                                            <input type="text" id="minamount" name="minPrice">
                                            <input type="text" id="maxamount" name="maxPrice">
                                        </div>
                                    </div>
                                    <div class="btn btn-danger btn-apply-click" style="margin-top:10px; width: 100%;">Apply</div>
                                </form>
                            </div>
                        </div>               
                        <div class="sidebar__item">
                            <div class="latest-product__text">
                                <h4>Latest Products</h4>
                                <div class="latest-product__slider owl-carousel">
                                    <div class="latest-prdouct__slider__item">
                                        {{#each latest.[0]}}
                                        <a href="/shop-grid/{{this._id}}" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                {{renderPercentSale this.percentSale}}
                                                <img src="{{this.img}}" alt="" style="max-width: 110px">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>{{this.name}}</h6>
                                                <span>${{renderPrice this}}</span>
                                            </div>
                                        </a>
                                        {{/each}}
                                    </div>

                                    <div class="latest-prdouct__slider__item">
                                        {{#each latest.[1]}}
                                        <a href="/shop-grid/{{this._id}}" class="latest-product__item">
                                            <div class="latest-product__item__pic">
                                                {{renderPercentSale this.percentSale}}
                                                <img src="{{this.img}}" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>{{this.name}}</h6>
                                                <span>${{renderPrice this}}</span>
                                            </div>
                                        </a>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Sale Off</h2>
                        </div>
                        <div class="row">
                            <div class="product__discount__slider owl-carousel">
                            {{#each productSale}}                                
                                <div class="col-lg-4">
                                    <div class="product__discount__item">
                                        <div class="product__discount__item__pic set-bg"
                                            data-setbg="{{this.img}}">
                                            <div class="product__discount__percent">-{{this.percentSale}}%</div>
                                            <ul class="product__item__pic__hover">
                                                <li><a href="/shop-grid/{{this.id}}"><i class="fa fa-retweet"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__discount__item__text">
                                            <span>{{this.type}}</span>
                                            <h5><a href="shop-grid/{{this._id}}">{{this.name}}</a></h5>
                                            <div class="product__item__price" id="price-item-{{this.id}}"><span style="font-weight:700; color:#1c1c1c; font-size:18px">$</span>{{renderPrice this}} <span>{{renderCost this}}</span></div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}                             
                            </div>
                        </div>
                    </div>
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">
                                {{!-- <div class="filter__sort">
                                    <span>Sort By</span>
                                    <select>
                                        <option value="0">Default</option>
                                        <option value="0">Default</option>
                                    </select>
                                </div> --}}
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>{{products.totalDocs}}</span> Products found</h6>
                                </div>
                            </div>
                            {{!-- <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div> --}}
                        </div>
                    </div>
                    <div class="row">
                        {{#each products.docs}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg={{this.img}}>
                                    {{!-- <div class="product__discount__percent">-20%</div> --}}
                                    {{renderPercentSale this.percentSale}}
                                    <ul class="product__item__pic__hover">
                                        <li><a href="/shop-grid/{{this.id}}"><i class="fa fa-retweet"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/shop-grid/{{this._id}}">{{this.name}}</a></h6>
                                    <h5 id="price-item-{{this.id}}"><span >$</span>{{renderPrice this}} <span class="span__productSale">{{renderCost this}}</span> </h5>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    <div class="row justify-content-center">
                        <div class="product__pagination">
                            {{pagination products}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->